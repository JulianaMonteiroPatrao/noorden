<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/custom.css">
    <link rel="stylesheet" href="../stylesheets/materialize.css">
    <style>
      body {
        text-align: justify;
        background-color: #4DB6AC;
      }
      img {
          width: 100%;
          margin-bottom: 20px;
        }
        .row{
          margin: 0;
        }
    </style>
  </head>
  <body>
    <header>
      <!-- <nav>
        <div class="nav-wrapper"></div>
      </nav> -->
    </header>
    <main>
      <ul class="tabs" style="font-weight: bold;">
        <li class="tab col s3"><a href="#login">LOGIN</a></li>
        <li class="tab col s3"><a href="#cadastro">CADASTRO</a></li>
      </ul>
      <div id="login">
        <img src="../images/patientLogin.jpg" alt="">
        <form id="login" method="POST">
          <div class="container">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix white-text">person_outline</i>
                <input name="name" type="text" class="validate white-text">
                <label for="name">Login</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix white-text">lock_outline</i>
                <input name="password" type="password" class="validate white-text">
                <label for="password">Senha</label>
              </div>
            </div>
            <div class="row" style="text-align: center;">
              <div class="col s12">
                <div class="switch">
                  <label>
                    <input type="checkbox">
                    <span class="lever"></span>
                    LEMBRAR SENHA
                  </label>
                </div>
              </div>
            </div>
            <div class="row" style="text-align: center; font-weight: bold; margin-top: 20px;">
              <div class="col s6">
                <button class="btn white teal-text waves-effect waves-teal" type="submit" name="action" style="font-weight: bold;">ENTRAR
                  <i class="material-icons right">send</i>
                </button>
                <!-- <a href="/patientCreated" class="btn white teal-text">ENTRAR</a> -->
              </div>
              <div class="col s6">
                <a href="#" class="btn white teal-text waves-effect waves-teal">ESQUECI A SENHA</a>  
              </div>
            </div>
          </div>
        </form>
      </div>
      <div id="cadastro">
        <img src="../images/patientLogin.jpg" alt="">
        <form id="cadastro" method="POST">
          <div class="container">
            <div class="row">
              <div class="input-field col s6">
                <input id="name" type="text" class="validate">
                <label for="name">Nome</label>
              </div>
              <div class="input-field col s6">
                <input id="password" name="password" type="text" class="validate">
                <label for="password">Senha</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <input id="email" name="email" type="email" class="validate">
                <label for="email">E-mail</label>
              </div>
              <div class="input-field col s6">
                <input id="cpf" name="cpf" type="text" class="validate">
                <label for="cpf">CPF</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <input id="phone" name="phone" type="text" class="validate">
                <label for="phone">Telefone</label>
              </div>
              <div class="input-field col s6">
                <input id="dob" name="dob" type="text" class="validate datepicker black-text">
                <label for="dob">Data de Nascimento</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <select name="gender">
                  <option value="" disabled selected>Escolha...</option>
                  <option value="m">Masculino</option>
                  <option value="f">Feminino</option>
                  <option value="o">Outros</option>
                </select>
                <label>Gênero</label>
              </div>
              <div class="input-field col s6">
                <select name="bloodType">
                  <option value="" disabled selected>Escolha...</option>
                  <option value="a">A</option>
                  <option value="b">B</option>
                  <option value="ab">AB</option>
                  <option value="o">O</option>
                </select>
                <label>Tipo Sanguíneo</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea id="address" name="address" class="materialize-textarea"></textarea>
                <label for="address">Endereço</label>
              </div>
            </div>
            <div class="row" style="text-align: center; font-weight: bold;">
              <div class="col s6">
                <!-- <button class="btn waves-effect waves-light" type="submit" name="action">CRIAR CONTA
                  <i class="material-icons right">send</i>
                </button> -->
                <a href="#" class="btn white teal-text">CRIAR CONTA</a>
              </div>
              <div class="col s6">
                <input type="reset" class="btn">
              </div>
            </div>
          </div>
        </form>
      </div>
    </main>
    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col s4">
            <i class="material-icons">keyboard_arrow_left</i>
          </div>
          <div class="col s4">
            <i class="material-icons">panorama_fish_eye</i>
          </div>
          <div class="col s4">
            <i class="material-icons">crop_square</i>
          </div>
        </div>
      </div>
    </footer>
  </body>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="../javascripts/materialize.min.js"></script>
  <script>
    $(document).ready(function(){
      $('.tabs').tabs();
      $('select').formSelect();
      $('input').addClass('white-text');
      $('textarea').addClass('white-text');
      $('.datepicker').datepicker();
    });
  </script>
</html>
